<h3>
  <strong>Title:</strong>
  <%= @article.title %>
</h3>

<p>
  <%= image_tag @article.image.url(:medium) %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user.email %>
</p>

<p>
  <strong>Category:</strong>
  <%= @article.category.name %>
</p>

<% if can? :update, @article %>
  <%= link_to "Edit", edit_article_path(@article) %> |
<% end %>
<%= link_to 'Back', articles_path %>
