<div class="article">
  <h2><%= link_to article.title, article %></h2>

  <p class="highlight_text">
    <%= link_to article.user.email, user_articles_path(user_id: article.user.id) %> |
    <%= link_to article.category.name, category_articles_path(category_id: article.category.id) %>
  </p>

  <p><%= article.content %></p>
  <% if article.pictures.first %>
    <p><%= image_tag article.pictures.first.image.url(:medium) %></p>
  <% end %>

